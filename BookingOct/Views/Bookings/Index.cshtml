@model IEnumerable<BookingOct.Models.Booking>

@{
    ViewData["Title"] = "Rezervările mele";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-calendar-check"></i> Rezervări Efectuate</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Rezervare Nouă
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover mt-2">
                <thead class="table-light">
                    <tr>
                        <th>Cameră</th>
                        <th>Data Start</th>
                        <th>Data Final</th>
                        <th>Utilizator</th>
                        <th>Acțiuni</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">Nu există nicio rezervare înregistrată.</td>
                        </tr>
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@item.Room.Name</strong>
                            </td>
                            <td>@item.StartDate.ToShortDateString()</td>
                            <td>@item.EndDate.ToShortDateString()</td>
                            <td>
                                <span class="badge bg-info text-dark">@item.UserId</span>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">Detalii</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Anulează</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>