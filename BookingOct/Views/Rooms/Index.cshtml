@model IEnumerable<BookingOct.Models.Room>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2>Camere Disponibile</h2>
        </div>
        @*if (User.Identity.Name == "admin@hotel.com")*@
        @*{*@
            <a asp-action="Create" class="btn btn-success">Adaugă Cameră Nouă</a>
        @*}*@
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">
                            <strong>Capacitate:</strong> @item.Capacity persoane<br />
                            <strong>Preț:</strong> @item.Price.ToString("C") / noapte
                        </p>
                    </div>
                    <div class="card-footer bg-transparent border-top-0 d-grid gap-2">
                        <a asp-controller="Bookings" asp-action="Create" class="btn btn-primary">Rezervă</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Vezi Calendar (Ocupare)</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>